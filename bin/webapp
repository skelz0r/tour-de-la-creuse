#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ROOT="$SCRIPT_DIR/.."
BUILD="$ROOT/_site"

rm -rf "$BUILD"
mkdir -p "$BUILD"
cp "$ROOT/webapp/index.html" "$BUILD/"
cp "$ROOT/data/seances.csv" "$BUILD/"

PORT="${1:-8080}"

echo "Webapp: http://localhost:$PORT/"
open "http://localhost:$PORT/" 2>/dev/null || true
cd "$BUILD" && python3 -m http.server "$PORT"
